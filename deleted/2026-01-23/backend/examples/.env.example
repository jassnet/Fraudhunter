# ACS API connection (use real values in your environment)
ACS_BASE_URL=https://acs.example.com/api
# Either set access/secret separately or provide ACS_TOKEN as "access:secret"
ACS_ACCESS_KEY=your_access_key
ACS_SECRET_KEY=your_secret_key
# ACS_TOKEN=your_access_key:your_secret_key
ACS_LOG_ENDPOINT=track_log/search

# SQLite DB file (absolute path recommended)
FRAUD_DB_PATH=/var/lib/fraud/fraud_checker.db

# Retrieval and persistence behavior
FRAUD_PAGE_SIZE=500
FRAUD_STORE_RAW=false

# Suspicious IP/UA thresholds
FRAUD_CLICK_THRESHOLD=50
FRAUD_MEDIA_THRESHOLD=3
FRAUD_PROGRAM_THRESHOLD=3
FRAUD_BURST_CLICK_THRESHOLD=20
FRAUD_BURST_WINDOW_SECONDS=600
